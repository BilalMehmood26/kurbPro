<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.KurbPlacerAdmin" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/dark_grey</item>
        <item name="android:navigationBarColor">@color/app_bg_grey</item>
    </style>

    <style name="Base.Theme.KurbPlacers.main" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/dark_grey</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <style name="Theme.KurbPlacerAdmin" parent="Base.Theme.KurbPlacerAdmin" />

    <style name="TextInputLayout.grey.Primary" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/hint_grey</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="fontFamily">@font/montserrat_medium_italic</item>
        <item name="boxCornerRadiusTopStart">@dimen/_10sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_10sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_10sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_10sdp</item>
        <item name="boxBackgroundColor">@color/grey</item>
    </style>

    <style name="TextInputLayout.White.Primary" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/hint_grey</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="fontFamily">@font/montserrat_medium_italic</item>
        <item name="boxCornerRadiusTopStart">@dimen/_10sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_10sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_10sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_10sdp</item>
        <item name="boxBackgroundColor">@color/input_bg_grey</item>
    </style>

    <style name="TextInputLayout.EditText.Primary" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_medium_italic</item>
        <item name="android:paddingStart">@dimen/_15sdp</item>
        <item name="android:paddingEnd">@dimen/_15sdp</item>
    </style>

    <style name="Button.14sp.Primary_Login_Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/red</item>
        <item name="cornerRadius">@dimen/_12sdp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Button.logout.Primary_Login_Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="background">@drawable/input_bg</item>
        <item name="cornerRadius">@dimen/_10sdp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
</resources>